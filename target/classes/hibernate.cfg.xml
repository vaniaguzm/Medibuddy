<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.connection.url">jdbc:h2:mem:testdb;DB_CLOSE_DELAY=-1</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password"></property>

        <!-- SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Drop and re-create the database schema on startup -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Mapea todas las entidades del proyecto -->
        <mapping class="medibuddy.entity.Usuario"/>
        <mapping class="medibuddy.entity.AdultoMayor"/>
        <mapping class="medibuddy.entity.Familiar"/>
        <mapping class="medibuddy.entity.Medicamento"/>
        <mapping class="medibuddy.entity.Actividad"/>
        <mapping class="medibuddy.entity.Fundacion"/>
        <mapping class="medibuddy.entity.CentroAcopio"/>
    </session-factory>
</hibernate-configuration>